{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "league-view",
  "version": "0.1.0",
  "identifier": "com.christian.league-view",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "league-view",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "linux": {
        "appimage": {
          "bundler": "~/.local/bin/tauri-bundler/linuxdeploy-x86_64.AppImage",
          "plugin": "~/.local/bin/tauri-bundler/linuxdeploy-plugin-appimage-x86_64.AppImage"
        }
      },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
